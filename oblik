    <script>
        // –°–æ–∑–¥–∞–Ω–∏–µ –∑–≤–µ–∑–¥–æ–ø–∞–¥–∞
        function createStars() {
            const starsContainer = document.getElementById('starsContainer');
            
            for (let i = 0; i < 100; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                
                const size = Math.random() * 3 + 1;
                const left = Math.random() * 100;
                const duration = Math.random() * 3 + 2;
                const delay = Math.random() * 5;
                
                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = `${left}vw`;
                star.style.animationDuration = `${duration}s`;
                star.style.animationDelay = `${delay}s`;
                
                starsContainer.appendChild(star);
            }
        }
        createStars();

        const tg = window.Telegram?.WebApp;
        if (tg) {
            tg.expand();
            tg.ready();
        }

        // –°–µ–∫—Ä–µ—Ç–Ω–∞—è –∫–æ–º–±–∏–Ω–∞—Ü–∏—è
        let favoritesClickCount = 0;
        let cartClickCount = 0;
        let comboActive = false;
        const ADMIN_PASSWORD = "123456789";
        let isAdmin = false;

        // –°–∏—Å—Ç–µ–º–∞ –∫–æ–¥–æ–≤ –ø—Ä–æ–¥–∞–≤—Ü–æ–≤
        let sellerCodes = JSON.parse(localStorage.getItem('sellerCodes')) || {
            'OBLIK1': true,
            'SELLER': true,
            'MARKET': true,
            'SHOP23': true
        };

        // –î–∞–Ω–Ω—ã–µ
        let balance = 1500;
        let cart = [];
        let userId = '';
        let isSeller = false;
        let userShopName = '';

        let products = JSON.parse(localStorage.getItem('products')) || [
            {
                id: '1',
                name: "–ö—Ä–æ—Å—Å–æ–≤–∫–∏ Nike Air Max",
                price: 4500,
                sellerId: "manager_oblik",
                sellerName: "manager_oblik",
                description: "–°—Ç–∏–ª—å–Ω—ã–µ –∫—Ä–æ—Å—Å–æ–≤–∫–∏ –¥–ª—è –ø–æ–≤—Å–µ–¥–Ω–µ–≤–Ω–æ–π –Ω–æ—Å–∫–∏",
                category: "shoes",
                image: "https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=300&h=200&fit=crop",
                date: new Date().toISOString()
            }
        ];

        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –∫–ª–∏–∫–æ–≤ –¥–ª—è —Å–µ–∫—Ä–µ—Ç–Ω–æ–π –∫–æ–º–±–∏–Ω–∞—Ü–∏–∏
        function handleFavoritesClick() {
            favoritesClickCount++;
            cartClickCount = 0; // –°–±—Ä–∞—Å—ã–≤–∞–µ–º —Å—á–µ—Ç—á–∏–∫ –∫–æ—Ä–∑–∏–Ω—ã
            
            if (favoritesClickCount >= 3) {
                comboActive = true;
                setTimeout(() => {
                    if (comboActive) {
                        favoritesClickCount = 0;
                        comboActive = false;
                    }
                }, 3000);
            }
            
            if (comboActive) {
                showFavorites();
            }
        }

        function handleCartClick() {
            if (comboActive) {
                cartClickCount++;
                
                if (cartClickCount >= 7) {
                    // –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º —Å–µ–∫—Ä–µ—Ç–Ω—É—é –ø–∞–Ω–µ–ª—å
                    showModal('secretPasswordModal');
                    favoritesClickCount = 0;
                    cartClickCount = 0;
                    comboActive = false;
                }
            } else {
                showCart();
            }
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ –ø–∞—Ä–æ–ª—è –∞–¥–º–∏–Ω–∞
        function checkAdminPassword() {
            const password = document.getElementById('adminPassword').value;
            
            if (password === ADMIN_PASSWORD) {
                isAdmin = true;
                document.getElementById('adminPanel').style.display = 'block';
                document.getElementById('adminBadge').style.display = 'inline-block';
                closeModal('secretPasswordModal');
                alert('üëë –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å –≤ –∞–¥–º–∏–Ω-–ø–∞–Ω–µ–ª—å!');
            } else {
                alert('‚ùå –ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å!');
            }
            
            document.getElementById('adminPassword').value = '';
        }

        // –ê–¥–º–∏–Ω —Ñ—É–Ω–∫—Ü–∏–∏
        function showCreateCodeForm() {
            if (!isAdmin) return;
            showModal('createCodeModal');
            generateNewCode();
        }

        function generateNewCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let newCode = '';
            for (let i = 0; i < 6; i++) {
                newCode += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            
            sellerCodes[newCode] = true;
            localStorage.setItem('sellerCodes', JSON.stringify(sellerCodes));
            
            document.getElementById('newCodeDisplay').textContent = newCode;
            document.getElementById('newCodeDisplay').style.color = '#ff00ff';
        }

        function showAllSellers() {
            if (!isAdmin) return;
            
            const sellers = JSON.parse(localStorage.getItem('sellers')) || {};
            const container = document.getElementById('allSellersList');
            container.innerHTML = '';
            
            if (Object.keys(sellers).length === 0) {
                container.innerHTML = '<div style="text-align: center; color: #888;">–ü—Ä–æ–¥–∞–≤—Ü–æ–≤ –ø–æ–∫–∞ –Ω–µ—Ç</div>';
            } else {
                Object.entries(sellers).forEach(([sellerId, sellerData], index) => {
                    container.innerHTML += `
                        <div class="product" style="margin: 10px 0; padding: 10px;">
                            <strong>${index + 1}. ${sellerData.shopName}</strong><br>
                            ID: ${sellerId}<br>
                            –ê–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω: ${new Date(sellerData.activated).toLocaleDateString()}<br>
                            –ö–æ–¥: ${sellerData.codeUsed}
                        </div>
                    `;
                });
            }
            showModal('allSellersModal');
        }

        function showAllProducts() {
            if (!isAdmin) return;
            
            const container = document.getElementById('allProductsList');
            container.innerHTML = '';
            
            if (products.length === 0) {
                container.innerHTML = '<div style="text-align: center; color: #888;">–¢–æ–≤–∞—Ä–æ–≤ –ø–æ–∫–∞ –Ω–µ—Ç</div>';
            } else {
                products.forEach((product, index) => {
                    container.innerHTML += `
                        <div class="product" style="margin: 10px 0; padding: 10px;">
                            <strong>${index + 1}. ${product.name}</strong><br>
                            üíµ ${product.price} ‚ÇΩ | üìÅ ${getCategoryName(product.category)}<br>
                            üë§ –ü—Ä–æ–¥–∞–≤–µ—Ü: ${product.sellerName}<br>
                            üÜî ID: ${product.sellerId}
                        </div>
                    `;
                });
            }
            showModal('allProductsModal');
        }

        function resetAllData() {
            if (!isAdmin) return;
            
            if (confirm('‚ö†Ô∏è –í–´ –£–í–ï–†–ï–ù–´?\n\n–≠—Ç–æ —É–¥–∞–ª–∏—Ç –í–°–ï —Ç–æ–≤–∞—Ä—ã –∏ –ø—Ä–æ–¥–∞–≤—Ü–æ–≤!')) {
                localStorage.removeItem('products');
                localStorage.removeItem('sellers');
                localStorage.removeItem('sellerCodes');
                
                products = [];
                sellerCodes = {
                    'OBLIK1': true,
                    'SELLER': true,
                    'MARKET': true,
                    'SHOP23': true
                };
                
                loadProducts();
                alert('‚úÖ –í—Å–µ –¥–∞–Ω–Ω—ã–µ —Å–±—Ä–æ—à–µ–Ω—ã!');
            }
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        function init() {
            if (tg?.initDataUnsafe?.user) {
                const user = tg.initDataUnsafe.user;
                userId = user.id.toString();
                document.getElementById('userId').textContent = userId;
                document.querySelector('h1').innerHTML = `üåü –ü—Ä–∏–≤–µ—Ç, ${user.first_name}! `;
                
                checkSellerStatus();
            }
            loadProducts();
        }

        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–∞—Ç—É—Å–∞ –ø—Ä–æ–¥–∞–≤—Ü–∞
        function checkSellerStatus() {
            const sellers = JSON.parse(localStorage.getItem('sellers')) || {};
            if (sellers[userId]) {
                isSeller = true;
                userShopName = sellers[userId].shopName || `–ú–∞–≥–∞–∑–∏–Ω_${userId.slice(-4)}`;
                showSellerPanel();
            }
        }

        // –ê–∫—Ç–∏–≤–∞—Ü–∏—è –ø—Ä–æ–¥–∞–≤—Ü–∞ –ø–æ –∫–æ–¥—É
        function activateSeller() {
            const code = document.getElementById('sellerCodeInput').value.toUpperCase();
            
            if (!code) {
                alert('‚ùå –í–≤–µ–¥–∏—Ç–µ –∫–æ–¥');
                return;
            }

            if (sellerCodes[code]) {
                // –ê–∫—Ç–∏–≤–∏—Ä—É–µ–º –ø—Ä–æ–¥–∞–≤—Ü–∞
                isSeller = true;
                userShopName = `–ú–∞–≥–∞–∑–∏–Ω_${userId.slice(-4)}`;
                
                // –°–æ—Ö—Ä–∞–Ω—è–µ–º –≤ localStorage
                const sellers = JSON.parse(localStorage.getItem('sellers')) || {};
                sellers[userId] = {
                    shopName: userShopName,
                    activated: new Date().toISOString(),
                    codeUsed: code
                };
                localStorage.setItem('sellers', JSON.stringify(sellers));
                
                // –£–±–∏—Ä–∞–µ–º –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–Ω—ã–π –∫–æ–¥
                delete sellerCodes[code];
                localStorage.setItem('sellerCodes', JSON.stringify(sellerCodes));
                
                showSellerPanel();
                closeModal('becomeSellerModal');
                alert(`üéâ –ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º! –¢–µ–ø–µ—Ä—å –≤—ã –ø—Ä–æ–¥–∞–≤–µ—Ü!\n–í–∞—à –º–∞–≥–∞–∑–∏–Ω: ${userShopName}`);
            } else {
                alert('‚ùå –ù–µ–≤–µ—Ä–Ω—ã–π –∫–æ–¥! –ü–æ–ª—É—á–∏—Ç–µ –∫–æ–¥ —É @manager_oblik');
            }
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å –ø–∞–Ω–µ–ª—å –ø—Ä–æ–¥–∞–≤—Ü–∞
        function showSellerPanel() {
            document.getElementById('sellerPanel').style.display = 'block';
            document.getElementById('buyerPanel').style.display = 'none';
            document.getElementById('sellerBadge').style.display = 'inline-block';
        }

        // –ü–æ–ª—É—á–∏—Ç—å –∫–æ–¥ —É –º–µ–Ω–µ–¥–∂–µ—Ä–∞
        function contactForCode() {
            const message = `üõçÔ∏è –•–æ—á—É —Å—Ç–∞—Ç—å –ø—Ä–æ–¥–∞–≤—Ü–æ–º –≤ FashionPlace\nüë§ –ú–æ–π ID: ${userId}\nüì± –í—ã–¥–∞–π—Ç–µ –∫–æ–¥ –¥–æ—Å—Ç—É–ø–∞`;
            window.open(`https://t.me/manager_oblik?text=${encodeURIComponent(message)}`, '_blank');
        }

        // –ó–∞–≥—Ä—É–∑–∫–∞ —Ç–æ–≤–∞—Ä–æ–≤
        function loadProducts() {
            const container = document.getElementById('productsContainer');
            container.innerHTML = '';
            
            if (products.length === 0) {
                container.innerHTML = '<div style="text-align: center; padding: 40px; color: #888;">üõçÔ∏è –¢–æ–≤–∞—Ä–æ–≤ –ø–æ–∫–∞ –Ω–µ—Ç</div>';
                return;
            }
            
            products.forEach(product => {
                const isMyProduct = isSeller && product.sellerId === userId;
                
                const productHTML = `
                    <div class="product">
                        <div class="product-image" style="background-image: url('${product.image}')"></div>
                        <h3>${product.name}</h3>
                        <p style="font-size: 14px; color: #ccc; margin: 5px 0;">${product.description}</p>
                        <div class="price">${product.price} ‚ÇΩ</div>
                        <div style="font-size: 12px; color: #888;">
                            –ü—Ä–æ–¥–∞–≤–µ—Ü: ${product.sellerName}
                            ${isMyProduct ? ' (–í–∞—à —Ç–æ–≤–∞—Ä)' : ''}
                        </div>
                        <button class="btn" onclick="addToCart(${product.price}, '${product.name}')">üõí –í –∫–æ—Ä–∑–∏–Ω—É</button>
                        ${isMyProduct ? `
                            <button class="btn btn-danger" onclick="deleteProduct('${product.id}')" style="margin-top: 5px;">
                                üóëÔ∏è –£–¥–∞–ª–∏—Ç—å
                            </button>
                        ` : ''}
                        ${isAdmin ? `
                            <button class="btn btn-admin" onclick="adminDeleteProduct('${product.id}')" style="margin-top: 5px; padding: 8px; font-size: 12px;">
                                üóëÔ∏è –ê–î–ú–ò–ù –£–î–ê–õ–ò–¢–¨
                            </button>
                        ` : ''}
                    </div>
                `;
                container.innerHTML += productHTML;
            });
        }

        // –ê–¥–º–∏–Ω —É–¥–∞–ª–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞
        function adminDeleteProduct(productId) {
            if (!isAdmin) return;
            
            if (confirm('üóëÔ∏è –ê–î–ú–ò–ù: –£–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç —Ç–æ–≤–∞—Ä?')) {
                products = products.filter(p => p.id !== productId);
                localStorage.setItem('products', JSON.stringify(products));
                loadProducts();
                alert('‚úÖ –¢–æ–≤–∞—Ä —É–¥–∞–ª–µ–Ω –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä–æ–º');
            }
        }

        // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –Ω–æ–≤–æ–≥–æ —Ç–æ–≤–∞—Ä–∞
        function addNewProduct() {
            if (!isSeller) {
                alert('‚ùå –¢–æ–ª—å–∫–æ –ø—Ä–æ–¥–∞–≤—Ü—ã –º–æ–≥—É—Ç –¥–æ–±–∞–≤–ª—è—Ç—å —Ç–æ–≤–∞—Ä—ã');
                return;
            }

            const name = document.getElementById('productName').value;
            const price = parseInt(document.getElementById('productPrice').value);
            const category = document.getElementById('productCategory').value;
            const description = document.getElementById('productDescription').value;
            const image = document.getElementById('productImage').value;

            if (!name || !price) {
                alert('‚ùå –ó–∞–ø–æ–ª–Ω–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –∏ —Ü–µ–Ω—É');
                return;
            }

            const newProduct = {
                id: Date.now().toString(),
                name,
                price,
                category,
                description: description || '–û–ø–∏—Å–∞–Ω–∏–µ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç',
                image: image || 'https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=300&h=200&fit=crop',
                sellerId: userId,
                sellerName: userShopName,
                date: new Date().toISOString()
            };

            products.push(newProduct);
            localStorage.setItem('products', JSON.stringify(products));
            
            loadProducts();
            closeModal('addProductModal');
            alert(`‚úÖ –¢–æ–≤–∞—Ä "${name}" –¥–æ–±–∞–≤–ª–µ–Ω –≤ –≤–∞—à –º–∞–≥–∞–∑–∏–Ω!`);
            
            // –û—á–∏—Å—Ç–∫–∞ —Ñ–æ—Ä–º—ã
            document.getElementById('productName').value = '';
            document.getElementById('productPrice').value = '';
            document.getElementById('productDescription').value = '';
            document.getElementById('productImage').value = '';
        }

        // –ü–æ–∫–∞–∑–∞—Ç—å –º–æ–∏ —Ç–æ–≤–∞—Ä—ã
        function showMyProducts() {
            if (!isSeller) return;
            
            const myProducts = products.filter(p => p.sellerId === userId);
            const container = document.getElementById('myProductsList');
            container.innerHTML = '';
            
            if (myProducts.length === 0) {
                container.innerHTML = '<div style="text-align: center; color: #888;">–£ –≤–∞—Å –ø–æ–∫–∞ –Ω–µ—Ç —Ç–æ–≤–∞—Ä–æ–≤</div>';
            } else {
                myProducts.forEach(product => {
                    container.innerHTML += `
                        <div class="product" style="margin: 10px 0; padding: 10px;">
                            <strong>${product.name}</strong><br>
                            üíµ ${product.price} ‚ÇΩ | üìÅ ${getCategoryName(product.category)}<br>
                            <button class="btn btn-danger" onclick="deleteProduct('${product.id}')" style="padding: 5px; font-size: 12px;">
                                üóëÔ∏è –£–¥–∞–ª–∏—Ç—å
                            </button>
                        </div>
                    `;
                });
            }
            showModal('myProductsModal');
        }

        // –£–¥–∞–ª–∏—Ç—å —Ç–æ–≤–∞—Ä
        function deleteProduct(productId) {
            if (confirm('üóëÔ∏è –£–¥–∞–ª–∏—Ç—å —ç—Ç–æ—Ç —Ç–æ–≤–∞—Ä?')) {
                products = products.filter(p => p.id !== productId);
                localStorage.setItem('products', JSON.stringify(products));
                loadProducts();
                showMyProducts(); // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫
                alert('‚úÖ –¢–æ–≤–∞—Ä —É–¥–∞–ª–µ–Ω');
            }
        }

        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function getCategoryName(category) {
            const categories = {
                'shoes': 'üëü –û–±—É–≤—å',
                'clothes': 'üëï –û–¥–µ–∂–¥–∞', 
                'accessories': 'üï∂Ô∏è –ê–∫—Å–µ—Å—Å—É–∞—Ä—ã',
                'electronics': 'üì± –≠–ª–µ–∫—Ç—Ä–æ–Ω–∏–∫–∞',
                'other': 'üì¶ –î—Ä—É–≥–æ–µ'
            };
            return categories[category] || category;
        }

        function showBecomeSellerForm() {
            showModal('becomeSellerModal');
        }

        function showAddProductForm() {
            if (!isSeller) {
                showBecomeSellerForm();
                return;
            }
            showModal('addProductModal');
        }

        function showWithdrawForm() {
            if (!isSeller) return;
            document.getElementById('availableBalance').textContent = Math.floor(balance * 0.95);
            showModal('withdrawModal');
        }

        function showReplenish() {
            document.getElementById('replenishModal').style.display = 'block';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        function showModal(modalId) {
            document.getElementById(modalId).style.display = 'block';
        }

        function addToCart(price, name) {
            cart.push({ name, price });
            alert(`‚úÖ "${name}" –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∫–æ—Ä–∑–∏–Ω—É!\n–¶–µ–Ω–∞: ${price} ‚ÇΩ`);
        }

        function showCart() {
            if (cart.length === 0) {
                alert('üõí –ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞');
            } else {
                const total = cart.reduce((sum, item) => sum + item.price, 0);
                alert(`üõí –ö–æ—Ä–∑–∏–Ω–∞:\n${cart.map(item => `‚Ä¢ ${item.name} - ${item.price} ‚ÇΩ`).join('\n')}\n\nüí∞ –ò—Ç–æ–≥–æ: ${total} ‚ÇΩ`);
            }
        }

        function showFavorites() {
            alert('‚ù§Ô∏è –†–∞–∑–¥–µ–ª "–ò–∑–±—Ä–∞–Ω–Ω–æ–µ" –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ');
        }

        function showProfile() {
            const sellerInfo = isSeller ? `\nüè™ –ú–∞–≥–∞–∑–∏–Ω: ${userShopName}\nüíº –°—Ç–∞—Ç—É—Å: –ü–†–û–î–ê–í–ï–¶` : '\nüíº –°—Ç–∞—Ç—É—Å: –ü–û–ö–£–ü–ê–¢–ï–õ–¨';
            const adminInfo = isAdmin ? '\nüëë –î–û–ü. –°–¢–ê–¢–£–°: –ê–î–ú–ò–ù–ò–°–¢–†–ê–¢–û–†' : '';
            alert(`üë§ –í–∞—à –ø—Ä–æ—Ñ–∏–ª—å:\nID: ${userId}\nüí∞ –ë–∞–ª–∞–Ω—Å: ${balance} ‚ÇΩ${sellerInfo}${adminInfo}\n\n–î–ª—è –ø–æ–ø–æ–ª–Ω–µ–Ω–∏—è —Å–≤—è–∂–∏—Ç–µ—Å—å —Å @manager_oblik`);
        }

        function requestWithdraw() {
            const amount = parseInt(document.getElementById('withdrawAmount').value);
            const card = document.getElementById('withdrawCard').value;
            
            if (!amount || amount <= 0) {
                alert('‚ùå –í–≤–µ–¥–∏—Ç–µ –∫–æ—Ä—Ä–µ–∫—Ç–Ω—É—é —Å—É–º–º—É');
                return;
            }
            
            if (amount > balance) {
                alert('‚ùå –ù–µ–¥–æ—Å—Ç–∞—Ç–æ—á–Ω–æ —Å—Ä–µ–¥—Å—Ç–≤');
                return;
            }
            
            if (!card) {
                alert('‚ùå –í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä –∫–∞—Ä—Ç—ã');
                return;
            }
            
            const message = `üè¶ –ó–∞–ø—Ä–æ—Å –Ω–∞ –≤—ã–≤–æ–¥\nüë§ –ü—Ä–æ–¥–∞–≤–µ—Ü: ${userShopName}\nüì± ID: ${userId}\nüí∞ –°—É–º–º–∞: ${amount} ‚ÇΩ\nüí≥ –ö–∞—Ä—Ç–∞: ${card}`;
            window.open(`https://t.me/manager_oblik?text=${encodeURIComponent(message)}`, '_blank');
            
            alert('‚úÖ –ó–∞–ø—Ä–æ—Å –Ω–∞ –≤—ã–≤–æ–¥ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω –º–µ–Ω–µ–¥–∂–µ—Ä—É');
            closeModal('withdrawModal');
        }

        function showMain() {}

        // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª—å–Ω–æ–≥–æ –æ–∫–Ω–∞ –ø—Ä–∏ –∫–ª–∏–∫–µ –≤–Ω–µ –µ–≥–æ
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', init);
    </script>
